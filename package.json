{
  "name": "otak-jinro",
  "version": "1.0.0",
  "description": "人狼ゲーム - Next.js + Cloudflare Workers",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "deploy": "powershell -ExecutionPolicy Bypass -File deploy.ps1 production",
    "deploy:staging": "powershell -ExecutionPolicy Bypass -File deploy.ps1 staging"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "fast-check": "^4.1.1",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "npm@9.0.0"
}
